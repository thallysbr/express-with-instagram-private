<!doctype html>
<html lang='pt-br'>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Instagram Feed</title>
        <style-css/>
    </head>
    <body>
        <div class="feeds">
            <for|row, index| of=input.list>
                <if(row.image_versions2 !== undefined && row.image_versions2 !== null && row.media_type !== 2)>
                    <feed-item ...row />
                </if>
                <else-if(row.media_type === 2 && row.video_versions !== undefined)>
                    <feed-video ...row />
                </else-if>
                <else>
                    <if(row.carousel_media_count > 0 && row.carousel_media !== undefined)>
                        <carrousel ...row />
                    </if>
                </else>
            </for>
        </div>

        <script type='text/javascript'>
            var elements = document.getElementsByClassName('feed-item-link');
            for(var i=0;i< elements.length;i++) {
                var element = elements[i];
                element.addEventListener('mouseover', function (event) {
                    var sub = this.getElementsByClassName('feed-item-overlay')[0];
                    sub.classList.add('active');
                    this.classList.add('overlay')
                });
                element.addEventListener('mouseleave', function (event) {
                    var sub = this.getElementsByClassName('feed-item-overlay')[0];
                    sub.classList.remove('active');
                    this.classList.remove('overlay');
                });
            }
        </script>
    </body>
</html>